<h1>My Code Snippets</h1>

<%= link_to 'New Snippet', new_snippet_path %>

<% if @snippets.any? %>
  <ul>
    <% @snippets.each do |snippet| %>
      <li>
        <p>
          <>
          <strong>Creator:</strong> <%= snippet.user&.username %>

        </p>
        <h2><%= link_to snippet.title, snippet_path(snippet) %></h2>
        <p>
          <strong>Language:</strong> <%= snippet.language %> |
          <strong>Privacy:</strong> <%= snippet.privacy %>
        </p>
        <% if snippet.description.present? %>
          <p><%= snippet.description.truncate(100) %></p>
        <% end %>
        <small>Created at: <%= snippet.created_at.strftime('%Y-%m-%d %H:%M') %></small>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No code snippets have been added yet.</p>
<% end %>